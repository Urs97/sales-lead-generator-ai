# Environment variables for the main application database

DATABASE_URL="postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DATABASE_NAME>"
SHADOW_DATABASE_URL="postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/shadowdb"

POSTGRES_USER=<USERNAME>
POSTGRES_PASSWORD=<PASSWORD>
POSTGRES_DB=<DATABASE_NAME>

# Example placeholders:
# DATABASE_URL="postgresql://youruser:yourpassword@yourhost:5432/yourdatabase"
# SHADOW_DATABASE_URL="postgresql://youruser:yourpassword@yourhost:5432/shadowdb"
# POSTGRES_USER=youruser
# POSTGRES_PASSWORD=yourpassword
# POSTGRES_DB=yourdatabase